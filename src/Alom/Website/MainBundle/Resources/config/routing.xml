<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="homepage" pattern="/">
        <default key="_controller">AlomMainBundle:Main:homepage</default>
    </route>

    <route id="identity_main_cv" pattern="/cv">
        <default key="_controller">AlomMainBundle:Identity:cv</default>
    </route>

    <route id="identity_main_contact" pattern="/contact">
        <default key="_controller">AlomMainBundle:Identity:contact</default>
    </route>

    <route id="login" pattern="/login">
        <default key="_controller">AlomMainBundle:Security:login</default>
    </route>

    <route id="login_check" pattern="/login_check">
        <default key="_controller">AlomMainBundle:Security:check</default>
    </route>

    <route id="logout" pattern="/logout">
        <default key="_controller">AlomMainBundle:Security:logout</default>
    </route>

    <route id="sitemap" pattern="/sitemap.xml">
        <default key="_controller">AlomMainBundle:Main:sitemap</default>
    </route>
</routes>
