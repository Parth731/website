{% extends "AlomMainBundle::layout/layout-1col.html.twig" %}

{% set formattedDate = post.getPublishedAt().format("F j, Y") %}

{% block title %}Alexandre Salomé - {{ post.getTitle() }} - Edition{% endblock %}
{% set active = "blog" %}

{% block content %}
    <div class="page-content">
        <h1>«&nbsp;{{ post.getTitle() }}&nbsp;» - Editing</h1>

        <div style="padding: 20px 0;">
            <a class="button" href="{{ path('blog_post_list') }}">&lt; Back to the list</a>
        </div>

        {% include "AlomBlogBundle:Post:form.html.twig" with {
            "action" : path("blog_post_edit", { "id": post.getId() }),
            "form" : form
        } only %}
    </div>
{% endblock %}
