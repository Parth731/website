<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="alom.blog.rst2html.class">Alom\Website\BlogBundle\Process\Rst2HtmlProcess</parameter>
    </parameters>

    <services>
        <service id="alom.blog.rst2html" class="%alom.blog.rst2html.class%">
            <argument>%kernel.root_dir%/../bin/rst2html-pygments</argument>
        </service>
    </services>
</container>
