<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="blog_post_list" pattern="/blog">
        <default key="_controller">AlomBlogBundle:Post:list</default>
    </route>

    <route id="blog_post_view" pattern="/blog/{slug}">
        <default key="_controller">AlomBlogBundle:Post:view</default>
    </route>

    <route id="blog_post_enable" pattern="/blog/{id}/enable">
        <default key="_controller">AlomBlogBundle:Post:enable</default>
    </route>

    <route id="blog_post_disable" pattern="/blog/{id}/disable">
        <default key="_controller">AlomBlogBundle:Post:disable</default>
    </route>

    <route id="blog_post_delete" pattern="/blog/{id}/delete">
        <default key="_controller">AlomBlogBundle:Post:delete</default>
    </route>

    <route id="blog_post_comment_delete" pattern="/blog/comment/{id}/delete">
        <default key="_controller">AlomBlogBundle:PostComment:delete</default>
    </route>

    <route id="blog_post_comment_activate" pattern="/blog/comment/{id}/activate">
        <default key="_controller">AlomBlogBundle:PostComment:activate</default>
    </route>

    <route id="blog_post_comment_inactivate" pattern="/blog/comment/{id}/inactivate">
        <default key="_controller">AlomBlogBundle:PostComment:inactivate</default>
    </route>
</routes>
