<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="alom_website.form.post_type" class="Alom\WebsiteBundle\Form\Type\PostType">
            <tag name="form.type" alias="alom_website_post" />
        </service>
        <service id="alom_website.form.post_comment_type" class="Alom\WebsiteBundle\Form\Type\PostCommentType">
            <tag name="form.type" alias="alom_website_post_comment" />
        </service>
        <service id="alom_website.form.book_type" class="Alom\WebsiteBundle\Form\Type\BookType">
            <tag name="form.type" alias="alom_website_book" />
        </service>
    </services>
</container>
