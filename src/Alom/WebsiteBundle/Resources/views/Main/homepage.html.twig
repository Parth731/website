{% extends "AlomWebsiteBundle::layout.html.twig" %}

{% block title 'Alexandre Salomé' %}
{% block meta_description 'Alexandre Salomé\'s personal website, Consultant for Sensio Labs. Links to the blog, social accounts, CV and contact' %}

{% set active = "" %}

{% block content %}
    <div class="page-content page-main-homepage">
        <div class="col-parent">
            <div class="col-1-2">
                <h2>Last blog posts</h2>
                <dl>
                {% for post in lastPosts %}
                    <dt><a href="{{ path("blog_post_view", { "slug": post.getSlug() }) }}">{{ post.getTitle() }}</a></dt>
                    <dd>{{ post.getMetaDescription() }}</dd>
                {% endfor %}
                </dl>
            </div>
            <div class="col-1-2">
                {% if lastBooks|length > 0 %}
                    <h2>Last books I've read</h2>
                    <div class="block-last-books">
                        <div class="very-last">
                            {% set book = lastBooks[0] %}
                            <table><tr><td>
                                <a href="{{ path('main_book_list') }}#{{ book.getSlug() }}">
                                    <img src="{{ ('/uploads/book/' ~ book.getIllustration()) | apply_filter('book_thumb') }}" alt="{{ book.getTitle() }}" />
                                </a>
                            </td></tr></table>
                        </div>
                        <div class="others">
                            {% for i in 1..4 %}
                                {% if lastBooks[i] is defined %}
                                    {% set book = lastBooks[i] %}
                                    <div class="book">
                                        <table><tr><td>
                                            <a title="{{ book.getTitle() }}" href="{{ path('main_book_list') }}#{{ book.getSlug() }}">
                                                <img src="{{ ('/uploads/book/' ~ book.getIllustration()) | apply_filter('book_mini') }}" alt="{{ book.getTitle() }}" />
                                            </a>
                                        </td></tr></table>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                        <div class="more">
                            <a class="button" href="{{ path("main_book_list") }}">View more books &raquo;</a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
