<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="test/Alom/Test/bootstrap.php">

  <!--
    Alom test suite
   -->
  <testsuites>

    <testsuite name="Alom">
      <directory>test/Alom</directory>
    </testsuite>

  </testsuites>

  <!--
    Code coverage
  -->
  <filter>
    <blacklist>

       <directory>./src/Application/Alom/IdentityBundle/Resources</directory>
       <directory>./src/Application/Alom/PageBundle/Resources</directory>

       <directory>./src/Bundle/Alom/BlogBundle/Resources</directory>
       <directory>./src/Bundle/Alom/ContactBundle/Resources</directory>

    </blacklist>
    <whitelist>
      <directory>./src/Application</directory>
      <directory>./src/Bundle</directory>
    </whitelist>
  </filter>
</phpunit>
